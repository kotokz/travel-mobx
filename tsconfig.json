{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noLib": false,
    "jsx": "react",
    "outDir": "dist"
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "global.d.ts"
  ],    
  "exclude": [
    "node_modules",
    "static"
  ]
}
